#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
 
#ifdef _WIN32
	#define LIMPIAR_PANTALLA system("cls");
#else
	#define LIMPIAR_PANTALLA system("clear");
#endif
  
  
typedef struct 
{
	int G[20][20];
	int num_ptos;
} Datos;
 
 


int  CaminoCorto              (void);
void PedirCaminos            (Datos *);
void BuscarCaminoCorto        (Datos *,int [20][2]);
int  BuscarF            (Datos *,int, int[20][2]);
void GuardarP           (int [20][2], int);
void GuardarD            (int [20][2], int);
void QuitarPvisit (Datos *, int [20][2], int, bool);
void ImprimirCaminoCorto      (int [20][2], int);
int  SumCaminos       (int [20][2], int);
void Repe        (void);
void Flush_in                (void); 

 
int main()
{
	CaminoCorto();
	return 0;
}
 

 
int CaminoCorto(void)
{
	int ruta[20][2]= {0};
	Datos datos = {0,0};
 
	do
	{
		LIMPIAR_PANTALLA
		printf("\n\n\n\tIngrese el numero de ciudades que desea visitar (5 - 20): ");
		scanf("%d",&datos.num_ptos);
		Flush_in();
 
		if (datos.num_ptos < 5 || datos.num_ptos > 20)
		{
			printf("\n\n\t\t** Ingrese numero entre 5 y 20 **");
			getchar();
		}
 
	} while (datos.num_ptos < 5 || datos.num_ptos > 20);
 
	PedirCaminos(&datos);
	BuscarCaminoCorto(&datos, ruta);
	ImprimirCaminoCorto(ruta, datos.num_ptos);
	Repe();
 
	return 0;
}
 
void PedirCaminos(Datos *datos)
{
	int i, j;
 
	LIMPIAR_PANTALLA
	printf("\n\n\tIngrese la distancia entre las \n\tciudades:\n\n");
 
	for (i = 0; i < (datos -> num_ptos); i++)
	{
	    datos -> G[i][i] = 0;
 
	    for (j = i + 1; j < (datos -> num_ptos); j++)
	    {	
    		printf("\n\tCiudad %d --> Ciudad %d : ", i+1, j+1);
     		scanf("%d",&datos -> G[i][j]);
     		Flush_in();
 
     		datos -> G[j][i] = datos -> G[i][j];
	    }
    }
}
 
void BuscarCaminoCorto(Datos *datos, int r[20][2])
{
	int i, inicio, indice_del_menor;
 
	do
	{
		LIMPIAR_PANTALLA
		printf("\n\n\n\t\tIndique el punto de partida: ");
		scanf("%d", &inicio);
		Flush_in();
 
		if (inicio < 1 || inicio > (datos -> num_ptos))
		{
			printf("\n\t\t** El punto de partida debe estar entre 1 y %d **", datos -> num_ptos);
			getchar();
		}
	}while(inicio < 1 || inicio > (datos -> num_ptos));
 
	r[0][0] = inicio;
 
	inicio--;	
 
	for (i = 0; i < (datos -> num_ptos); i++)
	{			
		if(i == 0)
		{
			indice_del_menor = BuscarF(datos, inicio, r);
			QuitarPvisit(datos, r, indice_del_menor, false);
		}
		else
			{
				if (i == (datos -> num_ptos) - 2)
				{
					indice_del_menor = BuscarF(datos, indice_del_menor, r);
					QuitarPvisit(datos, r, indice_del_menor, true);
				}
				else
				{
					indice_del_menor = BuscarF(datos, indice_del_menor, r);
					QuitarPvisit(datos, r, indice_del_menor, false);
				}
			}		
	}
}
 
int BuscarF(Datos *datos, int inicio, int r[20][2])
{
	int j, menor = 999999, indice_del_menor;
 
	for (j = 0; j < (datos -> num_ptos); j++)
	{
		if ( (datos -> G[inicio][j]) != 0 )
		{
			if ( (datos -> G[inicio][j]) < menor )
			{
				menor =	 datos -> G[inicio][j];
				indice_del_menor = j;
			}
		}
	}	
 
	GuardarP(r ,indice_del_menor);
	GuardarD(r, menor);
 
	return indice_del_menor;
}
 
void GuardarP(int r[20][2] , int indice_del_menor)
{
	int i, num_ptos_visitados;
 
	i= 0;
	num_ptos_visitados = 0;
 
	while(r[i][0] != 0)
	{
		i++;
		num_ptos_visitados++;
	}
 
	r[num_ptos_visitados][0] = indice_del_menor + 1;
}
 
void GuardarD(int r[20][2], int menor)
{
	int i, num_ptos_visitados;
 
	i=0;
	num_ptos_visitados = 0;
 
	while(r[i][1] != 0)
	{
		i++;
		num_ptos_visitados ++;
	}
 
	r[num_ptos_visitados][1] = menor;
}
 
void QuitarPvisit(Datos *datos, int r[20][2], int indice_del_menor, bool penultimo)
{
	int i, num_ptos_visitados, aux;
 
	i = 0;
	num_ptos_visitados = 0;
 
	while(r[i][1] != 0)
	{
		i++;
		num_ptos_visitados++;
	}
 
	if (penultimo == true)
	{
		for (i = num_ptos_visitados; i >= 1; i--)
		{
			aux = r[i][0];
			aux = aux - 1;
			datos -> G[indice_del_menor][aux] = 0;
		}
	}
	else
	{
		for (i = num_ptos_visitados; i >= 0; i--)
		{
			aux = r[i][0];
			aux = aux - 1;
			datos -> G[indice_del_menor][aux] = 0;
		}
	}
}
 
void ImprimirCaminoCorto(int ruta[20][2], int n)
{
	int i, total;
 
	total = SumCaminos(ruta, n);
 
	printf("\n\n\tLa ruta mas corta seria: ");
 
	for (i = 0; i < n + 1; i++)
	{
		if (i == n)
 
			printf(" %d\n", ruta[i][0]);
 
		else
 
			printf(" %d ->", ruta[i][0]);		
	}
 
	printf("\n\n\tDistancia recorrida:");
 
	for (i = 0; i < n; i++)
	{
		if (i == n-1)
 
			printf(" %d = %d\n\n", ruta[i][1],total);
 
		else	
 
			printf(" %d +", ruta[i][1]);	
	}
 
	getchar();
}
 
int SumCaminos(int r[20][2], int n)
{
	int i, total=0;
 
	for (i = 0; i < n; i++)
 
		total += r[i][1];
 
	return total;
}
 
void Repe(void){
	int opcion;
 
	do
	{
		LIMPIAR_PANTALLA
		printf("\n\n\t\tRepetir programa?\n\n\t 1.Si\n\n\t 2.No");
		printf("\n\n\n\tElegir opcion: ");
		scanf("%d", &opcion);
		Flush_in();
 
		switch(opcion)
			{
				case 1:
					CaminoCorto();
				break;
 
				case 2:
					LIMPIAR_PANTALLA
				break;
 
				default:
					printf("\n\n\tOpcion no valida");
					getchar();
				break;
			}
	} while (opcion < 1 || opcion > 2);
}
 
 

 
void Flush_in (void)
{
	char caracter;
 
	while((caracter = fgetc(stdin)) != EOF && caracter != '\n');
}
